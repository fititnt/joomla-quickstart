<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_comexample/models/rules">
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="examplefield"
			type="text"
			label="COM_COMEXAMPLE_COMEXAMPLE_FIELD_EXAMPLE_LABEL"
			description="COM_COMEXAMPLE_COMEXAMPLE_FIELD_EXAMPLE_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="catid"
			type="category"
			extension="com_comexample"
			class="inputbox"
			default=""
			label="COM_COMEXAMPLE_COMEXAMPLE_FIELD_CATID_LABEL"
			description="COM_COMEXAMPLE_COMEXAMPLE_FIELD_CATID_DESC"
			required="true">
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
	</fieldset>
	<fields name="params">
		<fieldset name="params" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
			<field
				name="show_category"
				type="list"
				label="COM_COMEXAMPLE_COMEXAMPLE_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_COMEXAMPLE_COMEXAMPLE_FIELD_SHOW_CATEGORY_DESC"
				default="">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
</form>
